@model List<VidlyNet7.Models.Movie>
@{
    ViewBag.Title = "Movies";
    Layout = "_Layout";
}
<h1>Movies</h1>

<a asp-controller="Movies" asp-action="Create" class="btn btn-primary text-white" >New Movie</a>

@if (Model.Count == 0)
{
    <h2>We don't have any movies yet.</h2>
}

else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Movies</th>
                <th>Genre</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td><a asp-controller="Movies" asp-action="Edit" asp-route-id="@movie.Id">@movie.Name</a></td>
                    <td>@movie.Genre?.Name</td>
                </tr>
            }
        </tbody>
    </table>
}

